# ==========================================
# Jobsprint Environment Configuration
# ==========================================

# Application Settings
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
DEBUG=false

# Database Configuration
POSTGRES_USER=jobsprint
POSTGRES_PASSWORD=change_this_secure_password_123!
POSTGRES_DB=jobsprint
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password_456!

# RabbitMQ Configuration
RABBITMQ_USER=jobsprint
RABBITMQ_PASSWORD=change_this_rabbitmq_password_789!
RABBITMQ_AMQP_PORT=5672
RABBITMQ_MGMT_PORT=15672
RABBITMQ_VHOST=/jobsprint

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_ENCRYPTION_KEY=change_this_n8n_encryption_key_012!
N8N_WEBHOOK_URL=https://jobsprint.example.com/webhook/

# Application Security
JWT_SECRET=change_this_jwt_secret_345!
JWT_EXPIRY=7d
ENCRYPTION_KEY=change_this_encryption_key_678!

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=https://jobsprint.example.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@jobsprint.example.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@jobsprint.example.com

# Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# OAuth Configuration (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Monitoring & Analytics
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_grafana_password_901!
GRAFANA_URL=https://grafana.jobsprint.example.com
PROMETHEUS_PORT=9090

# Nginx Configuration
NGINX_HOST=jobsprint.example.com
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Feature Flags
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_SCHEDULING_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_MULTI_TENANT_ENABLED=false

# Logging
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10

# Background Jobs
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Session Configuration
SESSION_SECRET=change_this_session_secret_234!
SESSION_MAX_AGE=86400000

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_SIGNATURE_ENABLED=true

# Database Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_CONNECTION_TIMEOUT_MS=2000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Search Configuration
SEARCH_TIMEOUT=5000
SEARCH_MAX_RESULTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
