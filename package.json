{
  "name": "jobsprint",
  "version": "1.0.0",
  "description": "AI-powered automation platform with Puter.js, Zapier MCP, and n8n",
  "main": "src/backend/index.js",
  "type": "module",
  "scripts": {
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:coverage": "jest --coverage && open coverage/lcov-report/index.html",
    "test:performance": "node tests/performance/benchmark.js",
    "lint": "eslint src tests --ext .js,.jsx",
    "lint:fix": "eslint src tests --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test"
  },
  "keywords": [
    "automation",
    "ai",
    "workflow",
    "n8n",
    "zapier",
    "puter.js"
  ],
  "author": "Jobsprint Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@faker-js/faker": "^8.4.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^170.0.0",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "ws": "^8.19.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
