# Jobsprint Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
APP_NAME=Jobsprint
APP_URL=http://localhost:3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobsprint
DB_USER=jobsprint
DB_PASSWORD=jobsprint_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=jobsprint
RABBITMQ_PASSWORD=rabbitmq_password

# n8n
N8N_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here

# Puter.js
PUTER_APP_ID=your_puter_app_id_here
PUTER_APP_KEY=your_puter_app_key_here

# Zapier MCP
ZAPIER_MCP_API_KEY=your_zapier_mcp_key_here
ZAPIER_MCP_ENDPOINT=https://api.zapier.com

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# AI Models
AI_MODEL_DEFAULT=gpt-3.5-turbo
AI_MODEL_FALLBACK=text-davinci-003
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here_change_this_in_production
SESSION_MAX_AGE=86400000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Feature Flags
FEATURE_PUTER_ENABLED=true
FEATURE_ZAPIER_ENABLED=true
FEATURE_N8N_ENABLED=true
FEATURE_AI_ENABLED=true
